<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/account_transaction_sticky_header_height"
    android:layout_marginRight="@dimen/account_transaction_margin_right"
    android:background="@color/account_trans_sticky_header_background"
    app:slm_headerDisplay="inline|sticky"
    app:slm_isHeader="true"
    app:slm_section_headerMarginStart="56dip">

    <View
        style="@style/AccountTransDivider"
        android:layout_gravity="top" />

    <TextView
        android:id="@+id/tvHeaderDate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/account_transaction_padding_left_right"
        android:gravity="start|center_vertical"
        android:text="1 March 2016"
        android:textAppearance="@style/AccountTransTextContent" />

    <View
        style="@style/AccountTransDivider"
        android:layout_gravity="bottom" />
</FrameLayout>