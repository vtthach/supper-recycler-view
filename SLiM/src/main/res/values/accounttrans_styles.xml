<resources>\
    <!--Text appearance-->
    <style name="AccountTransHeading">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AccountTransTextContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AccountTransTextContent.White">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountTransTextContent.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <!--View style-->
    <style name="AccountTransScrollBar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/account_trans_scrollbar_vertical_thumb</item>
        <item name="android:scrollbarTrackVertical">@android:color/transparent</item>
        <item name="android:scrollbarSize">10dp</item>
        <item name="android:scrollbarFadeDuration">2000</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
    </style>

    <style name="AccountTransTextColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/AccountTransTextContent.White</item>
        <item name="android:paddingLeft">@dimen/account_transaction_padding_left_right</item>
        <item name="android:paddingRight">@dimen/account_transaction_padding_left_right</item>
        <item name="android:layout_height">@dimen/account_transaction_header_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AccountTransTextColumn.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/AccountTransTextContent</item>
    </style>

    <style name="AccountTransTextColumn.Left">
        <item name="layout_widthPercent">30%</item>
    </style>

    <style name="AccountTransTextColumn.Left.Content">
        <item name="android:textAppearance">@style/AccountTransTextContent</item>
    </style>

    <style name="AccountTransTextAvailableSpend" parent="AccountTransTextColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textAppearance">@style/AccountTransTextContent.Italic</item>
    </style>

    <style name="AccountTransDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/account_trans_amount_divider_sticky_header</item>
    </style>
</resources>